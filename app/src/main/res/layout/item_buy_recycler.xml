<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/d16"
                  android:layout_marginBottom="@dimen/d16"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <View android:layout_width="@dimen/d6"
              android:background="@color/button_color"
              android:layout_height="@dimen/d24"/>
        <TextView android:layout_width="@dimen/d0"
                  android:layout_weight="1"
                  android:id="@+id/tv_person_name"
                  style="@style/black_16_text_style"
                  tool:text="zhangsan"
                  android:layout_marginLeft="@dimen/d20"
                  android:drawablePadding="@dimen/d5"
                  android:drawableLeft="@mipmap/icon_avator"
                  android:gravity="center_vertical"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"
                  tool:ignore="InefficientWeight"/>
        <TextView
                android:gravity="center"
                android:id="@+id/tv_pay_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/d20"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/button_color"
                tool:text="@string/buy_pay_method_text"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <io.bcaas.exchange.view.textview.VerticalMultiLayout
                android:layout_width="@dimen/d0"
                android:layout_weight="1"
                android:id="@+id/vml_price"
                android:layout_height="wrap_content"/>

        <View style="@style/small_line_style"
              android:layout_gravity="center_vertical"
              android:layout_width="@dimen/d1"
              android:layout_height="@dimen/d29"/>
        <io.bcaas.exchange.view.textview.VerticalMultiLayout
                android:layout_width="@dimen/d0"
                android:layout_weight="1"
                android:id="@+id/vml_number"
                android:layout_height="wrap_content"/>
        <View style="@style/small_line_style"
              android:layout_gravity="center_vertical"
              android:layout_width="@dimen/d1"
              android:layout_height="@dimen/d29"/>

        <io.bcaas.exchange.view.textview.VerticalMultiLayout
                android:layout_width="@dimen/d0"
                android:layout_weight="1"
                android:id="@+id/vml_fee"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View style="@style/line_style"
          android:layout_marginTop="@dimen/d12"
          android:layout_marginRight="@dimen/d16"
          android:layout_marginLeft="@dimen/d16"
          android:layout_gravity="center_vertical"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/d12"
                    android:layout_marginBottom="@dimen/d12"
                    android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_total_sum_unit"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_total_sum_value"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/d20"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_size_14"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_total_sum_value"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_buy"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/d12"
                android:textColor="@color/blue_5B88FF"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_buy"
                android:textSize="@dimen/text_size_14"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d30"
                android:minWidth="@dimen/d68"
                android:background="@drawable/stroke_border_blue"
                android:layout_marginRight="@dimen/d20"
                android:text="@string/buy"
                android:layout_gravity="right"
                android:textColor="@color/blue_5B88FF"
                android:gravity="center"
                tool:ignore="InefficientWeight"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/d10"
          android:background="@color/theme_grey"/>
</LinearLayout>