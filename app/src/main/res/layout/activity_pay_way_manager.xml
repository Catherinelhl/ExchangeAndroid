<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/theme_grey"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            layout="@layout/include_header"/>


    <TextView
            android:text="@string/pay_method_str"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="@dimen/text_size_20"
            android:layout_marginTop="@dimen/d23"
            style="@style/black_16_text_style"
    />
    <TextView
            android:text="@string/payment_method_tips"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grey_999999"
            android:layout_marginLeft="@dimen/text_size_20"
            android:layout_marginTop="@dimen/d12"
            style="@style/black_14_text_style"
    />
    <LinearLayout
            android:id="@+id/ll_bank_info"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_marginTop="@dimen/d23"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/d16"
                        android:layout_marginBottom="@dimen/d16"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/d20"
                        android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      style="@style/black_16_text_style"
                      android:text="@string/bank_card"
                      android:layout_alignParentLeft="true"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center_vertical"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"/>
            <TextView
                    android:gravity="center"
                    android:id="@+id/tv_delete"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/d16"
                    style="@style/ff6f61_14_text_style"
                    android:text="@string/delete"/>
        </RelativeLayout>
        <View style="@style/line_style"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/d12"
                      android:layout_marginLeft="@dimen/d20"
                      android:layout_gravity="center"
                      android:gravity="center_vertical"
                      android:layout_marginBottom="@dimen/d12"
                      android:layout_marginRight="@dimen/d20"
                      android:layout_height="wrap_content">
            <TextView
                    style="@style/black_666_14_text_style"
                    android:text="@string/bank_account_number"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    tool:ignore="InefficientWeight"/>
            <TextView
                    android:gravity="right"
                    android:id="@+id/tv_bank_account"
                    android:layout_weight="1"
                    android:layout_width="@dimen/d0"
                    style="@style/black_666_14_text_style"
                    tool:text="23.234523 BTC"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginBottom="@dimen/d12"
                      android:layout_marginLeft="@dimen/d20"
                      android:layout_gravity="center"
                      android:gravity="center_vertical"
                      android:layout_marginRight="@dimen/d20"
                      android:layout_height="wrap_content">
            <TextView
                    style="@style/black_666_14_text_style"
                    android:text="@string/card_holder"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"/>
            <TextView
                    android:gravity="right"
                    android:layout_width="@dimen/d0"
                    android:layout_weight="1"
                    android:id="@+id/tv_card_holder"
                    style="@style/black_666_14_text_style"
                    tool:text="0.001 ETH"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginBottom="@dimen/d12"
                      android:layout_marginLeft="@dimen/d20"
                      android:layout_gravity="center"
                      android:gravity="center_vertical"
                      android:layout_marginRight="@dimen/d20"
                      android:layout_height="wrap_content">
            <TextView
                    style="@style/black_666_14_text_style"
                    android:text="@string/bank"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"/>
            <TextView
                    android:gravity="right"
                    android:layout_width="@dimen/d0"
                    android:layout_weight="1"
                    android:id="@+id/tv_bank"
                    style="@style/black_666_12_text_style"
                    android:layout_marginLeft="@dimen/d16"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="middle"
                    android:singleLine="true"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="@dimen/d10"
              android:background="@color/theme_grey"/>
    </LinearLayout>
