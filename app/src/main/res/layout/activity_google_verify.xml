<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:exchange="http://schemas.android.com/apk/res-auto" xmlns:tool="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_header"/>

    <TextView
            android:id="@+id/tv_how_to_verify"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/d20"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginTop="@dimen/d24"
            android:text="1.请用Google验证器扫描以下二维码或手动输入以下密钥"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_333333"
            android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="@dimen/d20"
                  android:layout_marginRight="@dimen/d20"
                  android:layout_marginTop="@dimen/d16"
                  android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="@dimen/d120"
                android:layout_height="@dimen/d120"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_my_address"
                style="@style/black_14_text_style"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d20"
                android:text="sadfasdfad"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/grey_666666"
                android:layout_gravity="center"
                android:gravity="left"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/d20"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginTop="@dimen/d24"
            android:text="2.请输入Google验证器应用产生的6位验证码"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_333333"
            android:layout_height="wrap_content"/>
    <io.bcaas.exchange.view.editview.PassWordEditText
            android:id="@+id/etwa_verify_code"
            android:layout_width="match_parent"
            exchange:hint="@string/six_google_verify_code"
            android:layout_marginTop="@dimen/d24"
            android:background="@color/white"
            android:layout_height="@dimen/d48"/>

    <Button
            android:id="@+id/btn_sure"
            style="@style/button_style"
            android:layout_marginTop="@dimen/d36"
            android:text="@string/sure"/>

</LinearLayout>