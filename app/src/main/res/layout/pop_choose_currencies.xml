<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content"
              android:text="市场"
              android:layout_marginTop="@dimen/d28"
              android:layout_marginLeft="@dimen/d19"
              android:layout_marginRight="@dimen/d19"
              android:textSize="@dimen/text_size_14"
              android:textColor="@color/grey_999999"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/d5"
                  android:layout_marginLeft="@dimen/d19"
                  android:layout_marginRight="@dimen/d19"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="选择"
                  android:textSize="@dimen/text_size_14"
                  android:textColor="@color/grey_999999"
                  android:layout_height="wrap_content"/>
        <GridView
                android:id="@+id/gv_methods"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/d18"
                android:layout_margin="@dimen/d18"
                android:numColumns="3"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="@dimen/d48">
        <ImageButton
                android:id="@+id/ib_search"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d48"
                android:background="@color/transparent"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:src="@mipmap/icon_search"/>
        <EditText android:layout_width="@dimen/d0"
                  android:layout_weight="1"
                  android:id="@+id/et_select_content"
                  android:hint="@string/search"
                  android:textSize="@dimen/text_size_14"
                  android:textColor="@color/grey_999999"
                  android:textCursorDrawable="@drawable/edit_text_cursor_drawable"
                  android:background="@color/transparent"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_cancel"
                  android:text="@string/cancel"
                  android:layout_gravity="center_vertical"
                  android:gravity="center"
                  android:fontFamily="sans-serif-medium"
                  android:textColor="@color/grey_999999"
                  android:paddingRight="@dimen/d20"
                  android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_data_below"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/d10"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_choose_currencies_recycler"/>
    <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/d49">
        <TextView android:layout_width="@dimen/d0"
                  android:layout_weight="3"
                  android:id="@+id/tv_reset"
                  android:gravity="center"
                  android:background="@color/grey10_999999"
                  android:text="@string/reset"
                  android:textSize="@dimen/text_size_16"
                  android:textColor="@color/grey_999999"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="@dimen/d0"
                  android:layout_weight="4"
                  android:id="@+id/tv_sure"
                  android:textSize="@dimen/text_size_16"
                  android:background="@color/yellow_FFA73B"
                  android:gravity="center"
                  android:text="@string/sure"
                  android:textColor="@color/white"
                  android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>