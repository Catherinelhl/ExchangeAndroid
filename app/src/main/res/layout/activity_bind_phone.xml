<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:exchange="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_header"/>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/d24"
                  android:background="@color/white"
                  android:layout_height="@dimen/d48">
        <TextView android:layout_width="wrap_content"
                  android:text="+86"
                  android:id="@+id/tv_code"
                  android:gravity="center_vertical"
                  android:textSize="@dimen/text_size_14"
                  android:paddingLeft="@dimen/d20"
                  android:drawablePadding="@dimen/d13"
                  android:drawableRight="@mipmap/icon_drop_down"
                  android:textColor="@color/black_333333"
                  android:layout_height="@dimen/d48"/>
        <!--<View android:layout_width="@dimen/d0.5"-->
        <!--android:gravity="center_vertical"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:background="@color/grey_999999"-->
        <!--android:layout_height="@dimen/d24"/>-->
        <io.bcaas.exchange.view.editview.EditTextWithAction
                android:id="@+id/etwa_phone_number"
                android:layout_width="match_parent"
                android:background="@color/white"
                exchange:hint="@string/phone_number"
                exchange:behaviour="phone"
                android:layout_height="@dimen/d48"/>
    </LinearLayout>
    <io.bcaas.exchange.view.editview.EditTextWithAction
            android:id="@+id/etwa_message_code"
            android:layout_width="match_parent"
            exchange:hint="@string/message"
            exchange:behaviour="text"
            android:layout_marginTop="@dimen/d24"
            android:background="@color/white"
            android:layout_height="@dimen/d48"/>

    <Button
            android:id="@+id/btn_sure"
            style="@style/button_style"
            android:layout_marginTop="@dimen/d36"
            android:text="@string/sure"/>

</LinearLayout>