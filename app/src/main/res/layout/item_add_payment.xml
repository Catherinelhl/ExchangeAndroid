<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/theme_grey"
              android:layout_height="@dimen/d72">
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/d24"
          android:background="@color/theme_grey"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginBottom="@dimen/d16"
                  android:background="@color/white"
                  android:paddingLeft="@dimen/d20"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:layout_height="@dimen/d48">
        <EditText
                android:id="@+id/et_name"
                style="@style/black_14_edit_text_style"
                tool:text="@string/add_payment_way"
                android:layout_weight="1"
                android:layout_width="@dimen/d0"
                android:gravity="center_vertical"
                android:hint="@string/pay_method_str"
                android:layout_gravity="center"/>
        <TextView
                android:gravity="right"
                android:id="@+id/tv_middle_info"
                android:layout_width="@dimen/d0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/grey_999999"
                tool:text="@string/please_choose_a_payment"/>
        <TextView
                android:id="@+id/tv_payment_action"
                android:textSize="@dimen/text_size_14"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/d20"
                android:paddingLeft="@dimen/d10"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:drawableRight="@mipmap/icon_drop_down"
                android:layout_gravity="right"
                android:gravity="center"/>
    </LinearLayout>


</LinearLayout>