<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:exchange="http://schemas.android.com/apk/res-auto" xmlns:tool="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_header"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="@dimen/d20"
                  android:layout_marginTop="@dimen/d26"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_email_key"
                android:layout_width="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/grey_666666"
                android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_email_value"
                  android:textSize="@dimen/text_size_14"
                  tool:text="asdfasdfadf"
                  android:layout_marginLeft="@dimen/d2"
                  android:textColor="@color/button_color"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


    <io.bcaas.exchange.view.editview.EditTextWithAction
            android:id="@+id/etwa_email_verify_code"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/d16"
            android:background="@color/white"
            exchange:behaviour="text"
            exchange:hint="@string/email_verify_code"
            android:layout_height="@dimen/d48"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="@dimen/d20"
                  android:layout_marginTop="@dimen/d26"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_phone_key"
                android:layout_width="wrap_content"
                android:text="@string/phone"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/grey_666666"
                android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_phone_value"
                  android:textSize="@dimen/text_size_14"
                  tool:text="18580269120"
                  android:layout_marginLeft="@dimen/d2"
                  android:textColor="@color/button_color"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <io.bcaas.exchange.view.editview.EditTextWithAction
            android:id="@+id/etwa_message_verify_code"
            android:layout_width="match_parent"
            exchange:hint="@string/message_verify_code"
            exchange:behaviour="text"
            android:layout_marginTop="@dimen/d16"
            android:background="@color/white"
            android:layout_height="@dimen/d48"/>

    <Button
            android:id="@+id/btn_sure"
            style="@style/button_style"
            android:layout_marginTop="@dimen/d36"
            android:text="@string/sure"/>

</LinearLayout>