<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_password_key"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/d20"
              android:layout_marginRight="@dimen/d20"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/et_content"
                style="@style/black_14_edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:digits="@string/password_rule"
                android:drawablePadding="@dimen/d10"
                android:hint="@string/enter_password"
                android:layout_marginTop="@dimen/d16"
                android:inputType="textPassword"
                android:maxLength="16"
                android:minHeight="@dimen/d26"
                android:paddingRight="@dimen/d40"
                android:singleLine="true"/>

        <CheckBox
                android:id="@+id/cb_check"
                android:layout_width="@dimen/d25"
                android:layout_height="@dimen/d25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:button="@drawable/selector_cb_password"
                android:checked="false"
                android:gravity="center"/>
        <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:text="@string/send"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
            android:id="@+id/v_password_line"
            style="@style/line_style"
            android:layout_marginTop="@dimen/d16"/>
</LinearLayout>
