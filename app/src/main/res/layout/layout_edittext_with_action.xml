<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_password_key"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/d20"
              android:layout_marginRight="@dimen/d20"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/d8"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/et_content"
                style="@style/black_14_edit_text_style"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/d10"
                android:hint="@string/enter_password"
                android:layout_marginTop="@dimen/d16"
                android:minHeight="@dimen/d32"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingRight="@dimen/d40"
                android:singleLine="true"/>
        <EditText
                android:id="@+id/et_password"
                style="@style/black_14_edit_text_style"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:digits="@string/password_rule"
                android:inputType="textPassword"
                android:maxLength="20"
                android:visibility="gone"
                android:drawablePadding="@dimen/d10"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:hint="@string/enter_password"
                android:layout_marginTop="@dimen/d16"
                android:minHeight="@dimen/d32"
                android:paddingRight="@dimen/d40"
                android:singleLine="true"/>

        <CheckBox
                android:id="@+id/cb_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/d40"
                android:maxHeight="@dimen/d32"
                android:padding="@dimen/d3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:button="@drawable/selector_cb_password"
                android:checked="false"
                android:paddingRight="@dimen/d8"
                android:gravity="center_vertical|right"/>
        <LinearLayout
                android:id="@+id/ll_action"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:minWidth="@dimen/d60"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_height="@dimen/d32">
            <View android:layout_width="@dimen/d1"
                  style="@style/line_style"
                  android:layout_height="@dimen/d12"/>
            <TextView
                    android:id="@+id/tv_action"
                    android:layout_width="@dimen/d0"
                    android:layout_weight="1"
                    android:text="@string/send"
                    android:paddingRight="@dimen/d8"
                    android:textColor="@color/button_color"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <io.bcaas.exchange.view.viewGroup.ImageViewWithLoading
                android:id="@+id/iwl"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
            android:id="@+id/v_password_line"
            style="@style/line_style"
            android:layout_marginTop="@dimen/d3"/>
</LinearLayout>
