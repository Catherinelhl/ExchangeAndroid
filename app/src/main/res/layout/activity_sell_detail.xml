<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              xmlns:bcaas="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/theme_grey"
              android:layout_height="wrap_content">
    <include layout="@layout/include_header"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:background="@color/theme_grey"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:background="@color/white"
                          android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_purple_title"
                        style="@style/black_16_text_style"
                        android:layout_marginTop="@dimen/d14"
                        android:layout_marginBottom="@dimen/d13"
                        android:layout_marginRight="@dimen/d20"
                        android:layout_marginLeft="@dimen/d20"
                        android:text="出售BTC"
                        android:gravity="center_vertical"/>

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:background="@color/theme_grey"
                              android:layout_marginTop="@dimen/d14"
                              android:layout_marginBottom="@dimen/d13"
                              android:layout_marginRight="@dimen/d20"
                              android:layout_marginLeft="@dimen/d20"
                              android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_margin="@dimen/d16"
                                  android:layout_gravity="center"
                                  android:gravity="center_vertical"
                                  android:layout_marginRight="@dimen/d20"
                                  android:layout_height="wrap_content">
                        <TextView
                                style="@style/black_16_text_style"
                                android:text="@string/sell_price"
                                android:gravity="center_vertical"
                                android:layout_gravity="center"
                        />
                        <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="@dimen/d0"
                                android:layout_weight="1"
                                style="@style/black_14_text_style"
                                tool:text="20.3287461 ETH"
                                android:gravity="right"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_marginLeft="@dimen/d16"
                                  android:layout_gravity="center"
                                  android:gravity="center_vertical"
                                  android:layout_marginRight="@dimen/d16"
                                  android:layout_height="wrap_content">
                        <TextView
                                style="@style/black_16_text_style"
                                android:text="@string/sell_number"
                                android:gravity="center_vertical"
                                android:layout_gravity="center"
                        />
                        <TextView
                                android:gravity="right"
                                android:id="@+id/tv_number"
                                android:layout_weight="1"
                                android:layout_width="@dimen/d0"
                                style="@style/black_14_text_style"
                                tool:text="23.234523 BTC"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_gravity="center"
                                  android:gravity="center_vertical"
                                  android:layout_margin="@dimen/d16"
                                  android:layout_height="wrap_content">
                        <TextView
                                style="@style/black_16_text_style"
                                android:text="@string/fee"
                                android:gravity="center_vertical"
                                android:layout_gravity="center"
                        />
                        <TextView
                                android:gravity="right"
                                android:layout_width="@dimen/d0"
                                android:layout_weight="1"
                                android:id="@+id/tv_fee"
                                style="@style/black_14_text_style"
                                tool:text="0.001 ETH"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:id="@+id/tv_salable_balance"
                        style="@style/black_16_text_style"
                        android:text="可售余额 6.2834867843 BTC"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/d16"
                        android:layout_marginRight="@dimen/d20"
                        android:layout_marginLeft="@dimen/d20"
                />
                <TextView
                        android:id="@+id/tv_transaction_amount"
                        style="@style/black_16_text_style"
                        android:text="扣除手续费后的交易额：15.192438 ETH"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/d16"
                        android:layout_marginRight="@dimen/d20"
                        android:layout_marginLeft="@dimen/d20"
                />
                <io.bcaas.exchange.view.editview.EditTextWithAction
                        android:id="@+id/etwa_fund_password"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/d20"
                        android:layout_height="wrap_content"
                        bcaas:hint="@string/fund_password"
                        bcaas:behaviour="checkBox"
                />
                <io.bcaas.exchange.view.editview.EditTextWithAction
                        android:id="@+id/etwa_random_verify_code"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/d20"
                        android:layout_height="wrap_content"
                        bcaas:hint="@string/random_verify_code"
                        bcaas:behaviour="checkBox"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:layout_marginTop="@dimen/d12"
                              android:layout_marginLeft="@dimen/d20"
                              android:layout_marginBottom="@dimen/d12"
                              android:layout_gravity="center"
                              android:gravity="center_vertical"
                              android:layout_marginRight="@dimen/d20"
                              android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12"
                            android:text="还未启用Google身份验证？"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                    />
                    <TextView
                            android:id="@+id/tv_start_immediate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/d12"
                            android:textColor="@color/blue_5B88FF"
                            android:text="@string/start_immediate"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                    android:id="@+id/btn_sell"
                    style="@style/button_style"
                    android:layout_margin="@dimen/d20"
                    android:text="@string/sure"
                    android:gravity="center"
            />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
