<?xml version="1.0" encoding="utf-8"?>
<!--我的资产item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/d16"
                    android:layout_marginBottom="@dimen/d16"
                    android:layout_marginLeft="@dimen/d18"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/d20"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_fund_type"
                  style="@style/black_16_text_style"
                  tool:text="BTC"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center_vertical"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"/>

        <Button android:layout_width="@dimen/d68"
                android:id="@+id/btn_turn_out"
                android:textSize="@dimen/text_size_12"
                android:button="@null"
                android:text="@string/turn_out"
                android:layout_toLeftOf="@+id/btn_turn_in"
                android:textColor="@color/yellow_FFA73B"
                android:gravity="center"
                android:background="@drawable/stroke_border_yellow"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/d16"
                android:layout_height="@dimen/d30"/>
        <Button
                android:gravity="center"
                android:id="@+id/btn_turn_in"
                android:textColor="@color/white"
                android:background="@drawable/solid_border_yellow"
                android:layout_width="@dimen/d68"
                android:layout_height="@dimen/d30"
                android:button="@null"
                android:checked="true"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_12"
                android:layout_alignParentRight="true"
                android:text="@string/turn_in"/>
    </RelativeLayout>

    <View style="@style/small_line_style"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/d12"
                  android:layout_marginLeft="@dimen/d20"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:layout_marginRight="@dimen/d20"
                  android:layout_height="wrap_content">
        <TextView
                style="@style/black_666_14_text_style"
                android:text="@string/available"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                tool:ignore="InefficientWeight"/>
        <TextView
                android:gravity="right"
                android:id="@+id/tv_available"
                android:layout_weight="1"
                android:layout_width="@dimen/d0"
                style="@style/black_666_14_text_style"
                tool:text="23.234523 BTC"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/d12"
                  android:layout_marginBottom="@dimen/d12"
                  android:layout_marginLeft="@dimen/d20"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:layout_marginRight="@dimen/d20"
                  android:layout_height="wrap_content">
        <TextView
                style="@style/black_666_14_text_style"
                android:text="@string/freeze"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                tool:ignore="InefficientWeight"/>
        <TextView
                android:gravity="right"
                android:layout_width="@dimen/d0"
                android:layout_weight="1"
                android:id="@+id/tv_freeze"
                style="@style/black_666_14_text_style"
                tool:text="12.2334623465 ETH"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/d10"
          android:background="@color/theme_grey"/>
</LinearLayout>