<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/ll_transaction"
              android:layout_width="match_parent"
              android:background="@color/theme_grey"
              android:layout_height="match_parent">

    <io.bcaas.exchange.view.viewGroup.TransactionTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            app:tabMode="scrollable"
            android:background="@color/white"
            app:tabIndicatorColor="@color/button_color"
            app:tabSelectedTextColor="@color/button_color"
            app:tabIndicatorHeight="@dimen/d1"
            app:tabTextColor="@color/black_333333"
            app:tab_Mode="mode_scrollable"
            android:layout_height="@dimen/d48"/>
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <io.bcaas.exchange.view.viewpager.BaseViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_grey"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>