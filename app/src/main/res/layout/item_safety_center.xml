<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/theme_grey"
              android:layout_height="@dimen/d72">
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/d24"
          android:background="@color/theme_grey"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginBottom="@dimen/d16"
                  android:background="@color/white"
                  android:paddingLeft="@dimen/d20"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:layout_height="@dimen/d48">
        <TextView
                android:id="@+id/tv_name"
                style="@style/black_16_text_style"
                tool:text="@string/password"
                android:gravity="center_vertical"
                android:layout_gravity="center"/>
        <TextView
                android:gravity="right"
                android:id="@+id/tv_middle_info"
                android:layout_weight="1"
                android:layout_width="@dimen/d0"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/black_14_text_style"
                tool:text="23.234523 BTC"/>
        <TextView
                android:id="@+id/tv_safety_center_action"
                android:textSize="@dimen/text_size_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/d68"
                tool:text="@string/buy"
                android:layout_gravity="right"
                android:textColor="@color/blue_5B88FF"
                android:gravity="center"/>
    </LinearLayout>


</LinearLayout>