<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.design.widget.TabLayout
            android:id="@+id/top_tab_layout"
            android:layout_width="match_parent"
            app:tabSelectedTextColor="@color/theme_FF6400"
            app:tabTextColor="@color/theme_FDD400"
            android:layout_height="@dimen/d48"/>
    <TextView
            android:id="@+id/tv_text"
            android:layout_gravity="center"
            android:text="賣出"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <io.bcaas.exchange.view.textview.RichText
            xmlns:view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rt_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d48"
            android:gravity="center"
            android:text="554"
            android:textColor="#FFFFFF"
            view:drawable_location="top"
            view:drawable_height="@dimen/d30"
            view:drawable_src="@drawable/icon_home"
            view:drawable_width="@dimen/d30"/>


</LinearLayout>