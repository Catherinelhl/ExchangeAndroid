<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/theme_grey"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="@dimen/d0">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/d0"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/price"
                        android:layout_margin="@dimen/d5"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_1d2124"
                        android:layout_width="@dimen/d0"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="@string/number"
                        android:layout_margin="@dimen/d5"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_1d2124"
                        android:layout_width="@dimen/d0"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/srl_data"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="@dimen/d0"
            >
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_data"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/d10"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scrollbars="vertical"
                        tools:listitem="@layout/item_transaction_recycler"/>
            </android.support.v4.widget.SwipeRefreshLayout>

            <TextView
                    android:id="@+id/tv_average"
                    android:text="0.1410002"
                    android:layout_margin="@dimen/d5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/green_18ac22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/srl_data_below"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d0"
                    android:layout_weight="1"
            >
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_data_below"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/d10"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scrollbars="vertical"
                        tools:listitem="@layout/item_transaction_recycler"/>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/d0"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                    android:layout_margin="@dimen/d5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_1d2124"
                    android:layout_width="wrap_content"
                    android:text="限价交易"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_margin="@dimen/d5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_1d2124"
                    android:layout_width="wrap_content"
                    android:text="=0.972500"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_margin="@dimen/d5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_1d2124"
                    android:layout_width="wrap_content"
                    android:text="可用 245.786535 USDT"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_margin="@dimen/d5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_1d2124"
                    android:layout_width="wrap_content"
                    android:text="+ ZBB 交易手续费"
                    android:layout_height="wrap_content"/>
            <Button
                    style="@style/button_style"
                    android:text="买"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/d20"
            android:layout_height="@dimen/d0">
        <TextView
                android:text="当前委托"
                android:layout_margin="@dimen/d20"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/green_18ac22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View style="@style/line_style"/>
        <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/srl_data_delegate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
        >
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_data_delegate"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_transaction_delegate_recycler"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</LinearLayout>