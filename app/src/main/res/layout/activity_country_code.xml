<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/ll_list"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="@dimen/d48">
        <ImageButton
                android:id="@+id/ib_search"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d48"
                android:background="@color/transparent"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:src="@mipmap/icon_search"/>
        <EditText android:layout_width="@dimen/d0"
                  android:layout_weight="1"
                  android:id="@+id/et_select_content"
                  android:hint="@string/please_select_country_or_region"
                  android:textSize="@dimen/text_size_14"
                  android:textColor="@color/grey_999999"
                  android:textCursorDrawable="@drawable/edit_text_cursor_drawable"
                  android:background="@color/transparent"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_cancel"
                  android:text="@string/cancel"
                  android:layout_gravity="center_vertical"
                  android:gravity="center"
                  android:fontFamily="sans-serif-medium"
                  android:textColor="@color/grey_999999"
                  android:paddingRight="@dimen/d20"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/black_AEAEAE"
          android:layout_height="@dimen/d0.5"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d10"
            android:layout_marginTop="@dimen/d10"/>
</LinearLayout>