<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/rl_sell_view"
        android:layout_height="match_parent"
        android:background="@color/theme_grey">
    <TextView
            android:id="@+id/tv_salable_balance"
            android:background="@color/button_color"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/d40"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:text="@string/salable_balance"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_salable_balance"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/d16"
                          android:orientation="vertical"
                          android:background="@color/white"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/d20"
                        android:layout_marginTop="@dimen/d16"
                        android:paddingRight="@dimen/d20"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/black_333333"
                        android:text="@string/sell_out_price"/>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:layout_marginLeft="@dimen/d16"
                              android:layout_marginRight="@dimen/d16"
                              android:gravity="bottom"
                              android:layout_height="@dimen/d48">
                    <EditText
                            android:id="@+id/et_rate"
                            style="@style/black_666_18_edit_text_style"
                            android:layout_width="@dimen/d0"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/d12"
                            android:hint="@string/please_choose"
                            android:inputType="numberDecimal"/>
                    <TextView
                            android:id="@+id/tv_exchange_currency"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="@dimen/d30"
                            android:paddingRight="@dimen/d12"
                            android:textSize="@dimen/text_size_14"
                            android:drawablePadding="@dimen/d8"
                            android:drawableRight="@mipmap/icon_drop_down"
                            android:textColor="@color/black_333333"
                            android:text="ETH"/>

                </LinearLayout>
                <View style="@style/small_line_style"
                      android:layout_height="@dimen/d0.5"
                      android:layout_marginTop="@dimen/d12"
                      android:layout_marginLeft="@dimen/d16"
                      android:layout_marginRight="@dimen/d16"/>
                <TextView
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/d20"
                        android:paddingRight="@dimen/d20"
                        android:layout_marginTop="@dimen/d24"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/black_333333"
                        android:text="@string/sell_out_volume"/>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:layout_marginLeft="@dimen/d16"
                              android:layout_marginRight="@dimen/d16"
                              android:layout_marginTop="@dimen/d16"
                              android:layout_height="wrap_content">
                    <EditText
                            android:id="@+id/et_sell_volume"
                            style="@style/black_666_18_edit_text_style"
                            android:layout_width="@dimen/d0"
                            android:layout_weight="1"
                            android:hint="@string/zero"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/d12"/>
                    <TextView
                            android:id="@+id/tv_current_currency"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d12"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/black_333333"
                            android:text="BTC"/>

                </LinearLayout>
                <View style="@style/small_line_style"
                      android:layout_marginLeft="@dimen/d16"
                      android:layout_marginTop="@dimen/d12"
                      android:layout_marginRight="@dimen/d16"/>
                <SeekBar
                        android:id="@+id/sb_progress"
                        android:layout_width="match_parent"
                        android:max="100"
                        android:maxHeight="@dimen/d2"
                        android:thumb="@drawable/seekbar_thumb"
                        android:minHeight="@dimen/d2"
                        android:layout_marginTop="@dimen/d16"
                        android:padding="@dimen/d10"
                        android:layout_marginLeft="@dimen/d10"
                        android:layout_marginRight="@dimen/d10"
                        android:progressDrawable="@drawable/seekbar"
                        android:layout_height="wrap_content"/>


                <TextView
                        android:id="@+id/tv_progress_speed"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_marginBottom="@dimen/d16"
                        android:layout_marginRight="@dimen/d20"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_333333"
                        android:text="0"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/tv_fee_introduction"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d20"
                    android:layout_marginTop="@dimen/d24"
                    android:paddingRight="@dimen/d20"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/black_333333"
                    android:text="@string/sell_out_fee_text"/>
            <TextView
                    android:id="@+id/tv_final_tx_amount"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d20"
                    android:layout_marginTop="@dimen/d16"
                    android:paddingRight="@dimen/d20"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"
                    android:textColor="@color/black_333333"
                    android:text="@string/sell_out_transaction_amount"/>
            <Button
                    android:id="@+id/btn_sell"
                    style="@style/button_style"
                    android:layout_marginTop="@dimen/d38"
                    android:text="@string/sell"/>
            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/d60"
                  android:background="@color/transparent"/>

        </LinearLayout>
    </ScrollView>
    <io.bcaas.exchange.view.viewGroup.ShowCoinChartRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sccrl_layout"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>

</RelativeLayout>