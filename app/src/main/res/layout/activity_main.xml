<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity">

    <FrameLayout
            android:id="@+id/home_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_grey"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_tab_layout"
            tools:layout_editor_absoluteX="@dimen/d0"
            android:layout_marginBottom="@dimen/d48">
    </FrameLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/bottom_tab_layout"
            android:layout_width="match_parent"
            app:tabIndicatorHeight="@dimen/d0"
            android:background="@color/white"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tabSelectedTextColor="@color/theme_FF6400"
            app:tabTextColor="@color/grey_c5c5c5"
            android:layout_height="@dimen/d48">

    </android.support.design.widget.TabLayout>

</android.support.constraint.ConstraintLayout>