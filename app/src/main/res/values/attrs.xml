<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RichText -->
    <declare-styleable name="RichTextView">
        <attr name="drawable_src" format="reference" />
        <attr name="drawable_height" format="dimension" />
        <attr name="drawable_width" format="dimension" />
        <attr name="drawable_location">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="editViewWithAction">
        <attr name="hint" format="string" />
        <attr name="showLine" format="boolean" />
        <attr name="singleLine" format="boolean" />
        <attr name="showCheck" format="boolean" />
        <attr name="isPassword" format="boolean" />
        <attr name="showRightAction" format="boolean" />
        <attr name="hintColor" format="integer" />
        <attr name="textColor" format="integer" />
        <attr name="textSize" format="float" />

    </declare-styleable>
</resources>