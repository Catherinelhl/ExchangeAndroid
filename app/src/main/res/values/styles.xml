        <item name="android:background">@color/black10_1d2124</item>
        <item name="android:layout_height">@dimen/d0.5</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="black_18_text_style" parent="marquee_style">
        <item name="android:textColor">@color/black_1d2124</item>
        <item name="android:textSize">@dimen/text_size_18</item>
