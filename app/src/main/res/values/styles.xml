<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>-->
    <!-- Customize your theme here. -->
    <!-- 用上面的一种主题竟然-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- android去掉layout顶部的阴影（状态栏下边的阴影） -->
    <style name="Theme.bcaas" parent="AppTheme">
        <item name="android:showDividers">none</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/black_1d2124</item>
        <item name="colorPrimaryDark">@color/black_1d2124</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="dialog_loading" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bcaas_bg_button</item>
        <item name="android:layout_height">@dimen/d48</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/d20</item>
        <item name="android:layout_marginRight">@dimen/d20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black_bold_18_text_style" parent="marquee_style">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>
    <style name="black_14_edit_text_style" parent="marquee_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:inputType">textMultiLine|textImeMultiLine</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColorHint">@color/black20_AEAEAE</item>
        <item name="android:textColor">@color/black_333333</item>
    </style>

    <style name="line_style">
        <item name="android:background">@color/black20_AEAEAE</item>
        <item name="android:layout_height">@dimen/d1</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="small_line_style">
        <item name="android:background">@color/black20_AEAEAE</item>
        <item name="android:layout_height">@dimen/d0.5</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="black_18_text_style" parent="marquee_style">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>
    <style name="black_16_text_style" parent="marquee_style">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="black_14_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <style name="black_666_14_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_666666</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <style name="ff6f61_14_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <style name="black30_10_text_style" parent="marquee_style">
        <item name="android:textColor">@color/black30_1d2124</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>
    <style name="CustomTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
